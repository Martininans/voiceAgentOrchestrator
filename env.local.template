# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# VOICE PROVIDER CONFIGURATION
# ============================================================================
VOICE_PROVIDER=twilio

# ============================================================================
# TWILIO CONFIGURATION (for local testing)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET=your_local_jwt_secret_key_here

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your_openai_api_key

# ============================================================================
# REDIS CONFIGURATION (Optional for local dev)
# ============================================================================
# REDIS_URL=redis://localhost:6379

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# ============================================================================
# ORCHESTRATOR CONFIGURATION
# ============================================================================
ORCHESTRATOR_URL=http://localhost:8000
ORCHESTRATOR_TIMEOUT=30000
ORCHESTRATOR_RETRIES=3

# ============================================================================
# CHROMA CONFIGURATION
# ============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ============================================================================
# SECTOR CONFIGURATION
# ============================================================================
SECTOR=generic

# ============================================================================
# AZURE AD B2C CONFIGURATION (Optional for local dev)
# ============================================================================
# AAD_B2C_TENANT_ID=your_tenant_id
# AAD_B2C_CLIENT_ID=your_client_id
# AAD_B2C_CLIENT_SECRET=your_client_secret
# AAD_B2C_POLICY=your_policy_name
# AAD_B2C_GOOGLE_POLICY=your_google_policy
# AAD_B2C_PASSWORD_RESET_POLICY=your_password_reset_policy
# AAD_B2C_REDIRECT_URI=http://localhost:8000/auth/callback
# FRONTEND_URL=http://localhost:3000
# JWT_EXPIRES_IN=3600
# REFRESH_EXPIRES_IN=604800
