# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================

# Environment
NODE_ENV=production
LOG_LEVEL=info
DEBUG=false

# ============================================================================
# VOICE PROVIDER CONFIGURATION
# ============================================================================
VOICE_PROVIDER=sarvam

# 5 Configuration
SARVAM_API_KEY=your_production_sarvam_api_key
SARVAM_API_SECRET=your_production_sarvam_api_secret
SARVAM_BASE_URL=https://api.sarvam.ai
SARVAM_MODEL=sarvam-tts-hindi
SARVAM_LANGUAGE=hi
SARVAM_VOICE=female
SARVAM_WEBHOOK_URL=https://your-domain.com/voice/webhook

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATA_BACKEND=azure_postgres
AZURE_PG_CONNECTION_STRING=postgresql://username:password@your-azure-postgres-server.postgres.database.azure.com:5432/voice_agent_db?sslmode=require

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
STORAGE_BACKEND=azure_blob
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your_storage_key;EndpointSuffix=core.windows.net

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================
AUTH_PROVIDER=azure_ad_b2c
AAD_B2C_TENANT_ID=your_tenant_id
AAD_B2C_CLIENT_ID=your_client_id
AAD_B2C_POLICY=your_policy_name
AAD_B2C_CLIENT_SECRET=your_client_secret
AAD_B2C_GOOGLE_POLICY=B2C_1_GoogleSignIn
AAD_B2C_PASSWORD_RESET_POLICY=B2C_1_passwordreset
AAD_B2C_REDIRECT_URI=https://your-domain.com/auth/callback
FRONTEND_URL=https://your-frontend-domain.com
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=3600
REFRESH_EXPIRES_IN=86400

# ============================================================================
# AI/LLM CONFIGURATION
# ============================================================================
LLM_PROVIDER=azure_openai
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================================================
# VECTOR DATABASE CONFIGURATION
# ============================================================================
VECTOR_BACKEND=azure_search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your_search_key
AZURE_SEARCH_INDEX_NAME=voice-agent-index

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
REDIS_URL=redis://your-redis-cache.redis.cache.windows.net:6380?password=your_redis_password&ssl=true
DISABLE_OPTIMIZATIONS=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_here
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true
TRUSTED_HOSTS=your-domain.com,api.your-domain.com

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
GRAFANA_PASSWORD=your_grafana_admin_password
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
MAX_REQUEST_SIZE=10485760
MAX_FILE_SIZE=5242880
SESSION_TIMEOUT=3600
ENABLE_RATE_LIMITING=true
ENABLE_CSRF=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_FORMAT=json
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
FORCE_HTTPS=true

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourbackupaccount;AccountKey=your_backup_key;EndpointSuffix=core.windows.net




